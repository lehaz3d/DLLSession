<Window x:Class="WpfSessia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSessia"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid Background="#FFB5D5CA" >
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" Grid.RowSpan="2" VerticalAlignment="Center">
                <Label HorizontalAlignment="Center">Введите VIN</Label>
                <TextBox Width="350" Margin="5" x:Name="TbNameVin"></TextBox>
                <Label HorizontalAlignment="Center">Введите ГОСНОМЕР</Label>
                <TextBox Width="350" Margin="5" x:Name="TbGosNumber"></TextBox>
                <Button Height="35" FontWeight="Bold" Margin="5" x:Name="BtnTrueFalse" Click="BtnTrueFalse_Click" Background="#FFE0A9AF">Проверить</Button>
                <TextBlock Width="350" Margin="5" x:Name="TbYear" TextAlignment="Center"></TextBlock>
                <TextBlock Width="350" Margin="5" x:Name="TbCountry" TextAlignment="Center"></TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
